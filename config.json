{
    "name": "EHRUserMapAssistant",
    "namespace": "Stanford\\EHRUserMapAssistant",
    "description": "External Module to help Epic Users to map their Epic users with REDCap account.",
    "documentation": "README.md",
    "framework-version": 8,
    "authors": [
        {
            "name": "Andrew Martin",
            "email": "andy123@stanford.edu",
            "institution": "Stanford University"
        },
        {
            "name": "Ihab Zeedia",
            "email": "ihabz@stanford.edu",
            "institution": "Stanford University"
        }
    ],
    "permissions": [
        "redcap_every_page_before_render",
        "redcap_every_page_top"
    ],
    "enable-every-page-hooks-on-system-pages": true,
    "enable-every-page-hooks-on-login-form": true,
    "links": {
        "project": [
        ],
        "control-center": [
        ]
    },
    "no-auth-pages": [
        "views/link"
    ],
    "project-settings": [
        {
            "key": "enable-project-debug-logging",
            "name": "<b>Enable Debug Logging</b><br><i>(optional)</i> Requires installation and configuration of emLogger",
            "required": false,
            "type": "checkbox"
        }
    ],


	"system-settings": [
        {
            "key": "mapper-project-id-attempts",
            "name": "REDCap project that will hold records to mapping attempts.",
            "required": true,
            "type": "project-id"
        },
        {
            "key": "link-page-header",
            "name": "Text above validation link.",
            "required": false,
            "type": "rich-text"
        },
        {
            "key": "login-form-header",
            "name": "Login Form.",
            "required": false,
            "type": "rich-text"
        },
        {
            "key": "suppress-table-login-option",
            "name": "Inject custom JS and CSS into login form.",
            "required": false,
            "type": "checkbox"
        },
        {
            "key": "custom-js",
            "name": "Custom JS.",
            "required": false,
            "type": "textarea",
            "branchingLogic": {
                "field": "suppress-table-login-option",
                "value": "1"
            }
        },
        {
            "key": "custom-css",
            "name": "Custom css.",
            "required": false,
            "type": "textarea",
            "branchingLogic": {
                "field": "suppress-table-login-option",
                "value": "1"
            }
        },
        {
            "key": "enable-system-debug-logging",
            "name": "<b>Enable Debug Logging (system-wide)</b><i>(optional)</i> Requires installation and configuration of emLogger",
            "required": false,
            "type": "checkbox"
        }
    ],

	"compatibility": {
		"php-version-min": "",
		"php-version-max": "",
		"redcap-version-min": "",
		"redcap-version-max": ""
	}
}
